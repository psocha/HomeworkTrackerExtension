{
  "manifest_version": 2,

  "name": "Homework Tracker",
  "short_name": "Homework",
  "description": "An extension for managing assignments and due dates",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icons/icon16.png",
	"default_popup": "tracker.html",
    "default_title": "Homework Tracker"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": { 
	"16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}